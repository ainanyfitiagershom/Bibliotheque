@page
@model Backoffice.Razor.Pages.Notifications.IndexModel
@{
    ViewData["Title"] = "Gestion des notifications";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="bi bi-bell"></i> Gestion des notifications</h4>
    <div class="btn-group">
        <form method="post" asp-page-handler="DetecterRetards" class="d-inline">
            <button type="submit" class="btn btn-warning" onclick="return confirm('Lancer la détection des retards et envoyer les notifications ?')">
                <i class="bi bi-exclamation-triangle"></i> Détecter les retards
            </button>
        </form>
        <form method="post" asp-page-handler="SupprimerAnciennes" class="d-inline ms-2">
            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Supprimer toutes les notifications de plus de 30 jours ?')">
                <i class="bi bi-trash"></i> Nettoyer anciennes
            </button>
        </form>
    </div>
</div>

<!-- Statistiques rapides -->
<div class="row mb-4">
    <div class="col-md-2">
        <div class="card bg-secondary text-white">
            <div class="card-body text-center py-3">
                <h3 class="mb-0">@Model.TotalNotifications</h3>
                <small>Total</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-danger text-white">
            <div class="card-body text-center py-3">
                <h3 class="mb-0">@Model.TotalRetard</h3>
                <small>Retards</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-success text-white">
            <div class="card-body text-center py-3">
                <h3 class="mb-0">@Model.TotalDisponibilite</h3>
                <small>Disponibilité</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-warning text-dark">
            <div class="card-body text-center py-3">
                <h3 class="mb-0">@Model.TotalRappel</h3>
                <small>Rappels</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-info text-white">
            <div class="card-body text-center py-3">
                <h3 class="mb-0">@Model.TotalNonLues</h3>
                <small>Non lues</small>
            </div>
        </div>
    </div>
</div>

<!-- Filtres -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <input type="text" name="search" class="form-control" placeholder="Rechercher (utilisateur, titre, message)..." value="@Model.Search">
            </div>
            <div class="col-md-3">
                <select name="typeFiltre" class="form-select">
                    <option value="">Tous les types</option>
                    <option value="Retard" selected="@(Model.TypeFiltre == "Retard")">Retard</option>
                    <option value="Disponibilite" selected="@(Model.TypeFiltre == "Disponibilite")">Disponibilité</option>
                    <option value="Rappel" selected="@(Model.TypeFiltre == "Rappel")">Rappel</option>
                    <option value="Bienvenue" selected="@(Model.TypeFiltre == "Bienvenue")">Bienvenue</option>
                    <option value="Systeme" selected="@(Model.TypeFiltre == "Systeme")">Système</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-search"></i> Filtrer
                </button>
                <a href="/Notifications/Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Réinitialiser
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Liste des notifications -->
<div class="card">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width: 50px;">Type</th>
                    <th>Utilisateur</th>
                    <th>Titre</th>
                    <th>Message</th>
                    <th>Date</th>
                    <th>Statut</th>
                    <th style="width: 100px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var notif in Model.Notifications)
                {
                    <tr class="@(!notif.EstLue ? "table-light fw-semibold" : "")">
                        <td class="text-center">
                            <i class="bi @notif.TypeIcone fs-5"></i>
                        </td>
                        <td>
                            <a href="/Utilisateurs/Details/@notif.IdUtilisateur">@notif.NomUtilisateur</a>
                        </td>
                        <td>@notif.Titre</td>
                        <td>
                            <small class="text-muted">
                                @if (notif.Message.Length > 80)
                                {
                                    @(notif.Message.Substring(0, 80))<text>...</text>
                                }
                                else
                                {
                                    @notif.Message
                                }
                            </small>
                        </td>
                        <td>
                            <small title="@notif.DateCreation.ToString("dd/MM/yyyy HH:mm")">
                                @notif.TempsEcoule
                            </small>
                        </td>
                        <td>
                            @if (notif.EstLue)
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-check"></i> Lue
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-primary">
                                    <i class="bi bi-envelope"></i> Non lue
                                </span>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#detailsModal-@notif.IdNotification" title="Voir détails">
                                    <i class="bi bi-eye"></i>
                                </button>
                                <form method="post" asp-page-handler="Supprimer" asp-route-id="@notif.IdNotification" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Supprimer cette notification ?')" title="Supprimer">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Notifications.Any())
    {
        <div class="card-body">
            <div class="alert alert-info mb-0 text-center">
                <i class="bi bi-info-circle"></i> Aucune notification trouvée.
            </div>
        </div>
    }
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?currentPage=@(Model.CurrentPage - 1)@(string.IsNullOrEmpty(Model.TypeFiltre) ? "" : $"&typeFiltre={Model.TypeFiltre}")@(string.IsNullOrEmpty(Model.Search) ? "" : $"&search={Uri.EscapeDataString(Model.Search)}")">Précédent</a>
            </li>
            @for (int i = 1; i <= Math.Min(Model.TotalPages, 10); i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?currentPage=@i@(string.IsNullOrEmpty(Model.TypeFiltre) ? "" : $"&typeFiltre={Model.TypeFiltre}")@(string.IsNullOrEmpty(Model.Search) ? "" : $"&search={Uri.EscapeDataString(Model.Search)}")">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?currentPage=@(Model.CurrentPage + 1)@(string.IsNullOrEmpty(Model.TypeFiltre) ? "" : $"&typeFiltre={Model.TypeFiltre}")@(string.IsNullOrEmpty(Model.Search) ? "" : $"&search={Uri.EscapeDataString(Model.Search)}")">Suivant</a>
            </li>
        </ul>
    </nav>
}

<!-- Modals pour les détails -->
@foreach (var notif in Model.Notifications)
{
    <div class="modal fade" id="detailsModal-@notif.IdNotification" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi @notif.TypeIcone me-2"></i>
                        @notif.Titre
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Utilisateur :</strong> @notif.NomUtilisateur</p>
                    <p><strong>Type :</strong> <span class="badge bg-@notif.TypeCouleur">@notif.Type</span></p>
                    <p><strong>Date :</strong> @notif.DateCreation.ToString("dd/MM/yyyy HH:mm")</p>
                    @if (notif.EstLue && notif.DateLecture.HasValue)
                    {
                        <p><strong>Lue le :</strong> @notif.DateLecture.Value.ToString("dd/MM/yyyy HH:mm")</p>
                    }
                    <hr>
                    <p>@notif.Message</p>
                    @if (!string.IsNullOrEmpty(notif.Lien))
                    {
                        <a href="@notif.Lien" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-link-45deg"></i> Voir le lien associé
                        </a>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
}
