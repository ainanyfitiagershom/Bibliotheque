@page
@model Backoffice.Razor.Pages.Reservations.IndexModel
@{
    ViewData["Title"] = "Gestion des réservations";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="bi bi-bookmark-star"></i> Gestion des réservations</h4>
</div>

<!-- Statistiques rapides -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-warning text-dark">
            <div class="card-body text-center">
                <h3>@Model.TotalEnAttente</h3>
                <small><i class="bi bi-hourglass-split"></i> En attente</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h3>@Model.TotalDisponible</h3>
                <small><i class="bi bi-check-circle"></i> Disponibles (à récupérer)</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <h3>@Model.TotalExpirees</h3>
                <small><i class="bi bi-clock-history"></i> Expirées</small>
            </div>
        </div>
    </div>
</div>

<!-- Filtres -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <input type="text" name="search" class="form-control" placeholder="Rechercher (livre, utilisateur, email)..." value="@Model.Search">
            </div>
            <div class="col-md-3">
                <select name="statut" class="form-select">
                    <option value="">Tous les statuts actifs</option>
                    <option value="EnAttente" selected="@(Model.Statut == "EnAttente")">En attente</option>
                    <option value="Disponible" selected="@(Model.Statut == "Disponible")">Disponible</option>
                </select>
            </div>
            <div class="col-md-5">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-search"></i> Filtrer
                </button>
                <a href="/Reservations/Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Réinitialiser
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Liste des réservations -->
<div class="card">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Position</th>
                    <th>Livre</th>
                    <th>Utilisateur</th>
                    <th>Date réservation</th>
                    <th>Expiration</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model.Reservations)
                {
                    <tr class="@(reservation.EstExpiree ? "table-danger" : reservation.Statut == "Disponible" ? "table-success" : "")">
                        <td>
                            <span class="badge bg-secondary">#@reservation.PositionFile</span>
                        </td>
                        <td>
                            <a href="/Livres/Details/@reservation.IdLivre">@reservation.TitreLivre</a>
                        </td>
                        <td>
                            <div>
                                <a href="/Utilisateurs/Details/@reservation.IdUtilisateur">@reservation.NomUtilisateur</a>
                            </div>
                            <small class="text-muted">@reservation.EmailUtilisateur</small>
                        </td>
                        <td>@reservation.DateReservation.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @reservation.DateExpiration.ToString("dd/MM/yyyy")
                            @if (reservation.EstExpiree)
                            {
                                <span class="badge bg-danger ms-1">Expirée</span>
                            }
                        </td>
                        <td>
                            @{
                                var badgeClass = reservation.Statut switch
                                {
                                    "EnAttente" => "bg-warning text-dark",
                                    "Disponible" when reservation.EstExpiree => "bg-danger",
                                    "Disponible" => "bg-success",
                                    _ => "bg-secondary"
                                };
                                var statutText = reservation.Statut switch
                                {
                                    "EnAttente" => "En attente",
                                    "Disponible" when reservation.EstExpiree => "Expirée",
                                    "Disponible" => "Disponible",
                                    _ => reservation.Statut
                                };
                            }
                            <span class="badge @badgeClass">@statutText</span>
                        </td>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                @if (reservation.Statut == "EnAttente")
                                {
                                    @if (reservation.StockDisponible > 0)
                                    {
                                        <form method="post" asp-page-handler="Notifier" class="d-inline">
                                            <input type="hidden" name="id" value="@reservation.IdReservation" />
                                            <button type="submit" class="btn btn-sm btn-success" title="Notifier (livre disponible en stock)">
                                                <i class="bi bi-bell"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary d-flex align-items-center gap-1 py-2 px-2" style="font-size: 0.75rem;" title="Le livre n'est pas en stock. La notification sera envoyée automatiquement lors du retour.">
                                            <i class="bi bi-hourglass-split"></i> <span>Stock: 0</span>
                                        </span>
                                    }
                                }
                                @if (reservation.Statut == "Disponible")
                                {
                                    <form method="post" asp-page-handler="Renotifier" class="d-inline">
                                        <input type="hidden" name="id" value="@reservation.IdReservation" />
                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Renvoyer un rappel">
                                            <i class="bi bi-bell-fill"></i>
                                        </button>
                                    </form>
                                    @if (!reservation.EstExpiree)
                                    {
                                        <form method="post" asp-page-handler="ConvertirEmprunt" class="d-inline">
                                            <input type="hidden" name="id" value="@reservation.IdReservation" />
                                            <button type="submit" class="btn btn-sm btn-primary" title="Convertir en emprunt">
                                                <i class="bi bi-arrow-right-circle"></i>
                                            </button>
                                        </form>
                                    }
                                }
                                <form method="post" asp-page-handler="Annuler" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette réservation ?');">
                                    <input type="hidden" name="id" value="@reservation.IdReservation" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Annuler la réservation">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Reservations.Any())
    {
        <div class="card-body">
            <div class="alert alert-info mb-0 text-center">
                <i class="bi bi-info-circle"></i> Aucune réservation active trouvée.
            </div>
        </div>
    }
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?currentPage=@(Model.CurrentPage - 1)@(string.IsNullOrEmpty(Model.Statut) ? "" : $"&statut={Model.Statut}")@(string.IsNullOrEmpty(Model.Search) ? "" : $"&search={Uri.EscapeDataString(Model.Search)}")">Précédent</a>
            </li>
            @for (int i = 1; i <= Math.Min(Model.TotalPages, 10); i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?currentPage=@i@(string.IsNullOrEmpty(Model.Statut) ? "" : $"&statut={Model.Statut}")@(string.IsNullOrEmpty(Model.Search) ? "" : $"&search={Uri.EscapeDataString(Model.Search)}")">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?currentPage=@(Model.CurrentPage + 1)@(string.IsNullOrEmpty(Model.Statut) ? "" : $"&statut={Model.Statut}")@(string.IsNullOrEmpty(Model.Search) ? "" : $"&search={Uri.EscapeDataString(Model.Search)}")">Suivant</a>
            </li>
        </ul>
    </nav>
}

<!-- Légende -->
<div class="card mt-3">
    <div class="card-body">
        <h6><i class="bi bi-info-circle"></i> Comment fonctionne le système de réservation</h6>
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-light mb-0">
                    <strong>Notification automatique :</strong> Lorsqu'un livre est retourné (Emprunts → Retour),
                    le premier de la file d'attente est notifié automatiquement.<br>
                    <strong>Notification manuelle :</strong> Si le livre a du stock disponible, vous pouvez notifier manuellement.
                </div>
            </div>
        </div>
        <h6><i class="bi bi-hand-index"></i> Actions disponibles</h6>
        <div class="row">
            <div class="col-md-3">
                <span class="badge bg-success"><i class="bi bi-bell"></i></span>
                <small class="ms-2">Notifier (si stock > 0)</small>
            </div>
            <div class="col-md-3">
                <span class="badge bg-outline-success border"><i class="bi bi-bell-fill text-success"></i></span>
                <small class="ms-2">Renvoyer un rappel</small>
            </div>
            <div class="col-md-3">
                <span class="badge bg-primary"><i class="bi bi-arrow-right-circle"></i></span>
                <small class="ms-2">Convertir en emprunt</small>
            </div>
            <div class="col-md-3">
                <span class="badge bg-danger"><i class="bi bi-x-lg"></i></span>
                <small class="ms-2">Annuler</small>
            </div>
        </div>
    </div>
</div>
