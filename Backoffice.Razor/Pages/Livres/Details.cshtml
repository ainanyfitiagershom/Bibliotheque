@page "{id:int}"
@model Backoffice.Razor.Pages.Livres.DetailsModel
@{
    ViewData["Title"] = Model.Livre?.Titre ?? "Détails du livre";
}

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.Livre?.ImageCouverture))
                {
                    <img src="@Model.Livre.ImageCouverture" alt="@Model.Livre.Titre" class="img-fluid rounded mb-3" style="max-height: 300px;">
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center mb-3" style="height: 200px;">
                        <i class="bi bi-book display-1 text-muted"></i>
                    </div>
                }

                <div class="mb-3">
                    @if (Model.Livre!.StockDisponible > 0)
                    {
                        <span class="badge bg-success fs-6">Disponible</span>
                    }
                    else
                    {
                        <span class="badge bg-danger fs-6">Indisponible</span>
                    }
                </div>

                <div class="d-grid gap-2">
                    <a href="/Livres/Edit/@Model.Livre.IdLivre" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                    <a href="/Livres/Delete/@Model.Livre.IdLivre" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Supprimer
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0">@Model.Livre.Titre</h4>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th style="width: 150px;">ISBN</th>
                        <td>@(Model.Livre.ISBN ?? "-")</td>
                    </tr>
                    <tr>
                        <th>Auteur</th>
                        <td><a href="/Auteurs/Details/@Model.Livre.IdAuteur">@Model.Livre.Auteur?.NomComplet</a></td>
                    </tr>
                    <tr>
                        <th>Année</th>
                        <td>@(Model.Livre.Annee?.ToString() ?? "-")</td>
                    </tr>
                    <tr>
                        <th>Éditeur</th>
                        <td>@(Model.Livre.Editeur ?? "-")</td>
                    </tr>
                    <tr>
                        <th>Pages</th>
                        <td>@(Model.Livre.NombrePages?.ToString() ?? "-")</td>
                    </tr>
                    <tr>
                        <th>Langue</th>
                        <td>@Model.Livre.Langue</td>
                    </tr>
                    <tr>
                        <th>Emplacement</th>
                        <td>@(Model.Livre.Emplacement ?? "-")</td>
                    </tr>
                    <tr>
                        <th>Catégories</th>
                        <td>
                            @foreach (var lc in Model.Livre.LivreCategories)
                            {
                                <span class="badge me-1" style="background-color: @lc.Categorie?.Couleur">@lc.Categorie?.Nom</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Stock</th>
                        <td>
                            <span class="badge bg-primary">@Model.Livre.StockDisponible / @Model.Livre.Stock disponibles</span>
                        </td>
                    </tr>
                    <tr>
                        <th>Note</th>
                        <td>
                            @if (Model.Livre.NoteMoyenne > 0)
                            {
                                <span class="text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="bi @(i <= Model.Livre.NoteMoyenne ? "bi-star-fill" : "bi-star")"></i>
                                    }
                                </span>
                                <span>(@Model.Livre.NoteMoyenne.ToString("0.0"))</span>
                            }
                            else
                            {
                                <span class="text-muted">Aucun avis</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Emprunts</th>
                        <td>@Model.Livre.NombreEmprunts fois</td>
                    </tr>
                </table>

                @if (!string.IsNullOrEmpty(Model.Livre.Description))
                {
                    <h6>Description</h6>
                    <p>@Model.Livre.Description</p>
                }
            </div>
        </div>

        <!-- Emprunts en cours -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-arrow-left-right"></i> Emprunts en cours (@Model.EmpruntsEnCours.Count)
            </div>
            <div class="card-body p-0">
                @if (Model.EmpruntsEnCours.Any())
                {
                    <table class="table table-sm mb-0">
                        <thead>
                            <tr>
                                <th>Utilisateur</th>
                                <th>Date emprunt</th>
                                <th>Retour prévu</th>
                                <th>Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var e in Model.EmpruntsEnCours)
                            {
                                <tr>
                                    <td>@e.Utilisateur?.NomComplet</td>
                                    <td>@e.DateEmprunt.ToString("dd/MM/yyyy")</td>
                                    <td>@e.DateRetourPrevue.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-@e.StatutCouleur">@e.StatutAffichage</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted text-center py-3 mb-0">Aucun emprunt en cours</p>
                }
            </div>
        </div>

        <!-- Avis -->
        <div class="card">
            <div class="card-header">
                <i class="bi bi-chat-quote"></i> Avis (@Model.Livre.Avis.Count)
            </div>
            <div class="card-body">
                @if (Model.Livre.Avis.Any())
                {
                    @foreach (var avis in Model.Livre.Avis)
                    {
                        <div class="border-bottom pb-3 mb-3">
                            <div class="d-flex justify-content-between">
                                <strong>@avis.Utilisateur?.NomComplet</strong>
                                <small class="text-muted">@avis.DateAvis.ToString("dd/MM/yyyy")</small>
                            </div>
                            <div class="text-warning">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi @(i <= avis.Note ? "bi-star-fill" : "bi-star")"></i>
                                }
                            </div>
                            <p class="mb-0 mt-2">@avis.Commentaire</p>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center mb-0">Aucun avis</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a href="/Livres/Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Retour à la liste
    </a>
</div>
