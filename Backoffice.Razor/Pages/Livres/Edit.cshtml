@page "{id:int}"
@model Backoffice.Razor.Pages.Livres.EditModel
@{
    ViewData["Title"] = "Modifier le livre";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-pencil"></i> Modifier : @Model.Livre?.Titre
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Input.IdLivre" />

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.ISBN" class="form-label"></label>
                            <input asp-for="Input.ISBN" class="form-control">
                            <span asp-validation-for="Input.ISBN" class="text-danger"></span>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label asp-for="Input.Titre" class="form-label"></label>
                            <input asp-for="Input.Titre" class="form-control" required>
                            <span asp-validation-for="Input.Titre" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.IdAuteur" class="form-label">Auteur</label>
                            <select asp-for="Input.IdAuteur" class="form-select" required>
                                <option value="">-- Sélectionner --</option>
                                @foreach (var auteur in Model.Auteurs)
                                {
                                    <option value="@auteur.IdAuteur">@auteur.NomComplet</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="Input.Annee" class="form-label"></label>
                            <input asp-for="Input.Annee" class="form-control" type="number">
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="Input.Stock" class="form-label"></label>
                            <input asp-for="Input.Stock" class="form-control" type="number" min="0">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Editeur" class="form-label"></label>
                            <input asp-for="Input.Editeur" class="form-control">
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="Input.NombrePages" class="form-label"></label>
                            <input asp-for="Input.NombrePages" class="form-control" type="number">
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="Input.Langue" class="form-label"></label>
                            <select asp-for="Input.Langue" class="form-select">
                                <option value="Français">Français</option>
                                <option value="Anglais">Anglais</option>
                                <option value="Espagnol">Espagnol</option>
                                <option value="Allemand">Allemand</option>
                                <option value="Arabe">Arabe</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Catégories</label>
                        <div class="row">
                            @foreach (var cat in Model.Categories)
                            {
                                <div class="col-md-3 mb-2">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" name="Input.CategorieIds"
                                               value="@cat.IdCategorie" id="cat_@cat.IdCategorie"
                                               @(Model.Input.CategorieIds.Contains(cat.IdCategorie) ? "checked" : "")>
                                        <label class="form-check-label" for="cat_@cat.IdCategorie">
                                            <span class="badge" style="background-color: @cat.Couleur">@cat.Nom</span>
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label"></label>
                        <textarea asp-for="Input.Description" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="Input.ImageCouverture" class="form-label">URL image</label>
                            <input asp-for="Input.ImageCouverture" class="form-control">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.Emplacement" class="form-label"></label>
                            <input asp-for="Input.Emplacement" class="form-control">
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> Enregistrer
                        </button>
                        <a href="/Livres/Index" class="btn btn-outline-secondary">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
