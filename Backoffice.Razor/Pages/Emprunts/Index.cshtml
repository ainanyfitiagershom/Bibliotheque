@page
@model Backoffice.Razor.Pages.Emprunts.IndexModel
@{
    ViewData["Title"] = "Gestion des emprunts";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="bi bi-journal-arrow-up"></i> Gestion des emprunts</h4>
    <a href="/Emprunts/Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Nouvel emprunt
    </a>
</div>

<!-- Statistiques rapides -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h3>@Model.TotalEnCours</h3>
                <small>En cours</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <h3>@Model.TotalEnRetard</h3>
                <small>En retard</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h3>@Model.TotalTermines</h3>
                <small>Terminés ce mois</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h3>@Model.TotalAujourdhui</h3>
                <small>Aujourd'hui</small>
            </div>
        </div>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <input type="text" name="search" class="form-control" placeholder="Rechercher (livre, utilisateur)..." value="@Model.Search">
            </div>
            <div class="col-md-2">
                <select name="statut" class="form-select">
                    <option value="">Tous les statuts</option>
                    <option value="EnCours" selected="@(Model.Statut == "EnCours")">En cours</option>
                    <option value="EnRetard" selected="@(Model.Statut == "EnRetard")">En retard</option>
                    <option value="Termine" selected="@(Model.Statut == "Termine")">Terminé</option>
                </select>
            </div>
            <div class="col-md-2">
                <input type="date" name="dateDebut" class="form-control" value="@Model.DateDebut?.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-2">
                <input type="date" name="dateFin" class="form-control" value="@Model.DateFin?.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-search"></i> Filtrer
                </button>
                <a href="/Emprunts/Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Réinitialiser
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Livre</th>
                    <th>Utilisateur</th>
                    <th>Date emprunt</th>
                    <th>Retour prévu</th>
                    <th>Retour effectif</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emprunt in Model.Emprunts)
                {
                    <tr class="@(emprunt.Statut == "EnRetard" ? "table-danger" : "")">
                        <td>
                            <a href="/Livres/Details/@emprunt.IdLivre">@emprunt.TitreLivre</a>
                        </td>
                        <td>
                            <a href="/Utilisateurs/Details/@emprunt.IdUtilisateur">@emprunt.NomUtilisateur</a>
                        </td>
                        <td>@emprunt.DateEmprunt.ToString("dd/MM/yyyy")</td>
                        <td>@emprunt.DateRetourPrevue.ToString("dd/MM/yyyy")</td>
                        <td>@emprunt.DateRetourEffective?.ToString("dd/MM/yyyy")</td>
                        <td>
                            @{
                                var badgeClass = emprunt.Statut switch
                                {
                                    "EnCours" => "bg-primary",
                                    "EnRetard" => "bg-danger",
                                    "Termine" => "bg-success",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@emprunt.Statut</span>
                            @if (emprunt.NombreProlongations > 0)
                            {
                                <span class="badge bg-info" title="Prolongations">+@emprunt.NombreProlongations</span>
                            }
                        </td>
                        <td>
                            @if (emprunt.Statut == "EnCours" || emprunt.Statut == "EnRetard")
                            {
                                <div class="btn-group btn-group-sm">
                                    <a href="/Emprunts/Retour/@emprunt.IdEmprunt" class="btn btn-success" title="Enregistrer le retour">
                                        <i class="bi bi-check-lg"></i>
                                    </a>
                                    @if (emprunt.NombreProlongations < 2)
                                    {
                                        <a href="/Emprunts/Prolonger/@emprunt.IdEmprunt" class="btn btn-outline-primary" title="Prolonger">
                                            <i class="bi bi-calendar-plus"></i>
                                        </a>
                                    }
                                </div>
                            }
                            else
                            {
                                <a href="/Emprunts/Details/@emprunt.IdEmprunt" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Emprunts.Any())
    {
        <div class="card-body">
            <div class="alert alert-info mb-0 text-center">
                <i class="bi bi-info-circle"></i> Aucun emprunt trouvé.
            </div>
        </div>
    }
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?currentPage=@(Model.CurrentPage - 1)@(string.IsNullOrEmpty(Model.Search) ? "" : $"&search={Uri.EscapeDataString(Model.Search)}")@(string.IsNullOrEmpty(Model.Statut) ? "" : $"&statut={Model.Statut}")@(Model.DateDebut.HasValue ? $"&dateDebut={Model.DateDebut:yyyy-MM-dd}" : "")@(Model.DateFin.HasValue ? $"&dateFin={Model.DateFin:yyyy-MM-dd}" : "")">Précédent</a>
            </li>
            @for (int i = 1; i <= Math.Min(Model.TotalPages, 10); i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?currentPage=@i@(string.IsNullOrEmpty(Model.Search) ? "" : $"&search={Uri.EscapeDataString(Model.Search)}")@(string.IsNullOrEmpty(Model.Statut) ? "" : $"&statut={Model.Statut}")@(Model.DateDebut.HasValue ? $"&dateDebut={Model.DateDebut:yyyy-MM-dd}" : "")@(Model.DateFin.HasValue ? $"&dateFin={Model.DateFin:yyyy-MM-dd}" : "")">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?currentPage=@(Model.CurrentPage + 1)@(string.IsNullOrEmpty(Model.Search) ? "" : $"&search={Uri.EscapeDataString(Model.Search)}")@(string.IsNullOrEmpty(Model.Statut) ? "" : $"&statut={Model.Statut}")@(Model.DateDebut.HasValue ? $"&dateDebut={Model.DateDebut:yyyy-MM-dd}" : "")@(Model.DateFin.HasValue ? $"&dateFin={Model.DateFin:yyyy-MM-dd}" : "")">Suivant</a>
            </li>
        </ul>
    </nav>
}
