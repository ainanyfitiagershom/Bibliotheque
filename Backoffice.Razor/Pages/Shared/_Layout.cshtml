<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Backoffice Bibliothèque</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom Elegant CSS -->
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Sidebar Elegant -->
        <nav class="sidebar-elegant">
            <a href="/Index" class="sidebar-brand-elegant">
                <i class="bi bi-book-half"></i>
                <span>Bibliothèque</span>
            </a>

            <div class="sidebar-section-elegant">Principal</div>
            <div class="sidebar-nav-elegant">
                <a class="sidebar-link-elegant @(ViewContext.RouteData.Values["page"]?.ToString() == "/Index" ? "active" : "")" href="/Index">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
            </div>

            <div class="sidebar-section-elegant">Gestion</div>
            <div class="sidebar-nav-elegant">
                <a class="sidebar-link-elegant @(Context.Request.Path.StartsWithSegments("/Livres") ? "active" : "")" href="/Livres/Index">
                    <i class="bi bi-book"></i>
                    <span>Livres</span>
                </a>
                <a class="sidebar-link-elegant @(Context.Request.Path.StartsWithSegments("/Auteurs") ? "active" : "")" href="/Auteurs/Index">
                    <i class="bi bi-person-badge"></i>
                    <span>Auteurs</span>
                </a>
                <a class="sidebar-link-elegant @(Context.Request.Path.StartsWithSegments("/Categories") ? "active" : "")" href="/Categories/Index">
                    <i class="bi bi-tags"></i>
                    <span>Catégories</span>
                </a>
                <a class="sidebar-link-elegant @(Context.Request.Path.StartsWithSegments("/Utilisateurs") ? "active" : "")" href="/Utilisateurs/Index">
                    <i class="bi bi-people"></i>
                    <span>Utilisateurs</span>
                </a>
            </div>

            <div class="sidebar-section-elegant">Transactions</div>
            <div class="sidebar-nav-elegant">
                <a class="sidebar-link-elegant @(Context.Request.Path.StartsWithSegments("/Emprunts") ? "active" : "")" href="/Emprunts/Index">
                    <i class="bi bi-arrow-left-right"></i>
                    <span>Emprunts</span>
                </a>
                <a class="sidebar-link-elegant @(Context.Request.Path.StartsWithSegments("/Reservations") ? "active" : "")" href="/Reservations/Index">
                    <i class="bi bi-bookmark-star"></i>
                    <span>Réservations</span>
                </a>
            </div>

            <div class="sidebar-section-elegant">Outils</div>
            <div class="sidebar-nav-elegant">
                <a class="sidebar-link-elegant @(Context.Request.Path.StartsWithSegments("/ImportExport") ? "active" : "")" href="/ImportExport/Index">
                    <i class="bi bi-file-earmark-arrow-up"></i>
                    <span>Import / Export</span>
                </a>
                <a class="sidebar-link-elegant @(Context.Request.Path.StartsWithSegments("/Notifications") ? "active" : "")" href="/Notifications/Index">
                    <i class="bi bi-bell"></i>
                    <span>Notifications</span>
                </a>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="main-content-elegant">
            <!-- Top Navbar -->
            <div class="top-navbar-elegant">
                <h5 class="page-title-elegant">@ViewData["Title"]</h5>
                <div class="navbar-actions-elegant">
                    @await Component.InvokeAsync("NotificationBadge")
                    <div class="dropdown user-dropdown-elegant">
                        <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i> @User.Identity?.Name
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/Admin/Profil"><i class="bi bi-person"></i> Mon profil</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" asp-page="/Admin/Logout">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Page Content -->
            <div class="content-wrapper-elegant">
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        <div class="login-page-elegant">
            @RenderBody()
        </div>
    }

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
