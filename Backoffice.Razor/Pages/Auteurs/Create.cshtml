@page
@model Backoffice.Razor.Pages.Auteurs.CreateModel
@{
    ViewData["Title"] = "Ajouter un auteur";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-plus-lg"></i> Nouvel auteur
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Nom" class="form-label"></label>
                            <input asp-for="Input.Nom" class="form-control" required>
                            <span asp-validation-for="Input.Nom" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Prenom" class="form-label"></label>
                            <input asp-for="Input.Prenom" class="form-control">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Nationalite" class="form-label"></label>
                        <input asp-for="Input.Nationalite" class="form-control">
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.DateNaissance" class="form-label"></label>
                            <input asp-for="Input.DateNaissance" type="date" class="form-control">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.DateDeces" class="form-label"></label>
                            <input asp-for="Input.DateDeces" type="date" class="form-control">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.PhotoUrl" class="form-label"></label>
                        <input asp-for="Input.PhotoUrl" class="form-control" placeholder="https://...">
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Biographie" class="form-label"></label>
                        <textarea asp-for="Input.Biographie" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> Enregistrer
                        </button>
                        <a href="/Auteurs/Index" class="btn btn-outline-secondary">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
