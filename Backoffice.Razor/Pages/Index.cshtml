@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Stat Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="stat-card-elegant rose">
            <div class="stat-icon-elegant">
                <i class="bi bi-book"></i>
            </div>
            <div class="stat-value-elegant">@Model.Stats.TotalLivres</div>
            <div class="stat-label-elegant">Livres</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card-elegant purple">
            <div class="stat-icon-elegant">
                <i class="bi bi-people"></i>
            </div>
            <div class="stat-value-elegant">@Model.Stats.TotalUtilisateurs</div>
            <div class="stat-label-elegant">Utilisateurs</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card-elegant gold">
            <div class="stat-icon-elegant">
                <i class="bi bi-arrow-left-right"></i>
            </div>
            <div class="stat-value-elegant">@Model.Stats.EmpruntsEnCours</div>
            <div class="stat-label-elegant">Emprunts en cours</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card-elegant elegant">
            <div class="stat-icon-elegant" style="background: rgba(255,255,255,0.2);">
                <i class="bi bi-exclamation-triangle"></i>
            </div>
            <div class="stat-value-elegant">@Model.Stats.EmpruntsEnRetard</div>
            <div class="stat-label-elegant">En retard</div>
        </div>
    </div>
</div>

<!-- Statistiques secondaires -->
<div class="row g-4 mb-4">
    <div class="col-md-2">
        <div class="card-elegant text-center p-3">
            <h3 style="color: var(--rose-accent); margin-bottom: 0;">@Model.Stats.TotalAuteurs</h3>
            <small style="color: var(--text-muted);">Auteurs</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card-elegant text-center p-3">
            <h3 style="color: var(--purple-accent); margin-bottom: 0;">@Model.Stats.TotalCategories</h3>
            <small style="color: var(--text-muted);">Catégories</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card-elegant text-center p-3">
            <h3 style="color: #10b981; margin-bottom: 0;">@Model.Stats.TotalExemplaires</h3>
            <small style="color: var(--text-muted);">Exemplaires</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card-elegant text-center p-3">
            <h3 style="color: var(--gold-accent); margin-bottom: 0;">@Model.Stats.ReservationsEnAttente</h3>
            <small style="color: var(--text-muted);">Réservations</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card-elegant text-center p-3">
            <h3 style="color: #10b981; margin-bottom: 0;">@Model.Stats.EmpruntsAujourdhui</h3>
            <small style="color: var(--text-muted);">Emprunts aujourd'hui</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card-elegant text-center p-3">
            <h3 style="color: var(--purple-accent); margin-bottom: 0;">@Model.Stats.RetoursAujourdhui</h3>
            <small style="color: var(--text-muted);">Retours aujourd'hui</small>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Graphique Emprunts par mois -->
    <div class="col-md-8">
        <div class="card-elegant">
            <div class="card-header-elegant">
                <i class="bi bi-graph-up"></i> Emprunts par mois
            </div>
            <div class="card-body-elegant">
                <canvas id="chartEmprunts" height="300"></canvas>
            </div>
        </div>
    </div>

    <!-- Top Livres -->
    <div class="col-md-4">
        <div class="card-elegant">
            <div class="card-header-elegant">
                <i class="bi bi-trophy"></i> Top 5 Livres
            </div>
            <div class="card-body-elegant p-0">
                <ul class="list-group list-group-flush">
                    @foreach (var livre in Model.Stats.TopLivres.Take(5))
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center" style="border-color: var(--border-soft);">
                            <div>
                                <strong style="color: var(--text-dark);">@livre.Titre</strong><br>
                                <small style="color: var(--text-muted); font-style: italic;">@livre.Auteur</small>
                            </div>
                            <span class="badge-elegant badge-info-elegant">@livre.NombreEmprunts</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mt-2">
    <!-- Graphique par catégorie -->
    <div class="col-md-4">
        <div class="card-elegant">
            <div class="card-header-elegant">
                <i class="bi bi-pie-chart"></i> Emprunts par catégorie
            </div>
            <div class="card-body-elegant">
                <canvas id="chartCategories" height="250"></canvas>
            </div>
        </div>
    </div>

    <!-- Indicateurs -->
    <div class="col-md-4">
        <div class="card-elegant">
            <div class="card-header-elegant">
                <i class="bi bi-speedometer"></i> Indicateurs
            </div>
            <div class="card-body-elegant">
                <div class="mb-4">
                    <div class="d-flex justify-content-between mb-2">
                        <span style="color: var(--text-medium);">Taux d'occupation</span>
                        <span style="color: var(--rose-accent); font-weight: 600;">@Model.Stats.TauxOccupation%</span>
                    </div>
                    <div class="progress" style="height: 10px; border-radius: 10px; background: var(--rose-light);">
                        <div class="progress-bar" style="width: @Model.Stats.TauxOccupation%; background: linear-gradient(90deg, #34d399, #10b981); border-radius: 10px;"></div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-2">
                        <span style="color: var(--text-medium);">Taux de retard</span>
                        <span style="color: var(--rose-deep); font-weight: 600;">@Model.Stats.TauxRetard%</span>
                    </div>
                    <div class="progress" style="height: 10px; border-radius: 10px; background: var(--rose-light);">
                        <div class="progress-bar" style="width: @Model.Stats.TauxRetard%; background: linear-gradient(90deg, #f472b6, #ec4899); border-radius: 10px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions rapides -->
    <div class="col-md-4">
        <div class="card-elegant">
            <div class="card-header-elegant">
                <i class="bi bi-lightning"></i> Actions rapides
            </div>
            <div class="card-body-elegant">
                <div class="d-grid gap-3">
                    <a href="/Livres/Create" class="btn-elegant btn-outline-elegant">
                        <i class="bi bi-plus-lg"></i> Ajouter un livre
                    </a>
                    <a href="/Emprunts/Create" class="btn-elegant btn-success-elegant">
                        <i class="bi bi-arrow-left-right"></i> Nouvel emprunt
                    </a>
                    <a href="/Utilisateurs/Create" class="btn-elegant btn-primary-elegant">
                        <i class="bi bi-person-plus"></i> Nouvel utilisateur
                    </a>
                    <a href="/Admin/ImportExport" class="btn-elegant btn-secondary-elegant">
                        <i class="bi bi-file-earmark-arrow-up"></i> Import / Export
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Couleurs élégantes pour les graphiques
    const roseAccent = '#ec4899';
    const purpleAccent = '#a855f7';
    const roseLight = 'rgba(236, 72, 153, 0.1)';

    // Graphique des emprunts par mois
    const ctxEmprunts = document.getElementById('chartEmprunts').getContext('2d');
    new Chart(ctxEmprunts, {
        type: 'line',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.Stats.EmpruntsParMois.Select(e => e.MoisFormate))),
            datasets: [{
                label: 'Emprunts',
                data: @Html.Raw(Json.Serialize(Model.Stats.EmpruntsParMois.Select(e => e.NombreEmprunts))),
                borderColor: roseAccent,
                backgroundColor: roseLight,
                tension: 0.4,
                fill: true,
                pointBackgroundColor: roseAccent,
                pointBorderColor: '#fff',
                pointBorderWidth: 2,
                pointRadius: 5
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: 'rgba(236, 72, 153, 0.1)'
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            }
        }
    });

    // Graphique par catégorie avec couleurs élégantes
    const elegantColors = ['#f472b6', '#c084fc', '#a78bfa', '#d4a574', '#34d399', '#60a5fa', '#f9a8d4', '#d8b4fe'];
    const ctxCategories = document.getElementById('chartCategories').getContext('2d');
    new Chart(ctxCategories, {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.Stats.EmpruntsParCategorie.Select(c => c.Categorie))),
            datasets: [{
                data: @Html.Raw(Json.Serialize(Model.Stats.EmpruntsParCategorie.Select(c => c.NombreEmprunts))),
                backgroundColor: elegantColors,
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'right',
                    labels: {
                        usePointStyle: true,
                        padding: 15
                    }
                }
            }
        }
    });
</script>
}
