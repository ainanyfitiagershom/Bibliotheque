@page
@model LoginModel
@{
    ViewData["Title"] = "Connexion";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Connexion - Backoffice Bibliothèque</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --rose-light: #fdf2f8;
            --rose-soft: #fce7f3;
            --rose-medium: #f9a8d4;
            --rose-accent: #ec4899;
            --rose-deep: #be185d;
            --purple-light: #faf5ff;
            --purple-accent: #a855f7;
            --purple-deep: #7c3aed;
            --text-dark: #1f1f1f;
            --text-medium: #4a4a4a;
            --text-soft: #6b6b6b;
            --text-muted: #9ca3af;
            --white: #ffffff;
            --border-soft: rgba(236, 72, 153, 0.15);
            --gradient-hero: linear-gradient(135deg, #fdf2f8 0%, #faf5ff 50%, #fff0f5 100%);
            --gradient-elegant: linear-gradient(135deg, #f472b6 0%, #c084fc 50%, #a78bfa 100%);
            --shadow-elegant: 0 15px 50px rgba(124, 58, 237, 0.15);
            --shadow-medium: 0 8px 30px rgba(236, 72, 153, 0.12);
            --radius-xl: 24px;
            --radius-md: 20px;
            --radius-full: 9999px;
            --font-display: 'Playfair Display', Georgia, serif;
            --font-elegant: 'Cormorant Garamond', Georgia, serif;
            --font-body: 'Montserrat', -apple-system, sans-serif;
            --transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        body {
            font-family: var(--font-body);
            background: var(--gradient-hero);
            background-attachment: fixed;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .login-card {
            background: var(--white);
            border-radius: var(--radius-xl);
            box-shadow: var(--shadow-elegant);
            padding: 3rem;
            width: 100%;
            max-width: 450px;
            border: 1px solid var(--border-soft);
        }

        .login-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .login-icon {
            width: 80px;
            height: 80px;
            background: var(--gradient-elegant);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            box-shadow: var(--shadow-medium);
        }

        .login-icon i {
            font-size: 2.5rem;
            color: white;
        }

        .login-header h2 {
            font-family: var(--font-display);
            font-size: 2rem;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .login-header p {
            font-family: var(--font-elegant);
            font-style: italic;
            color: var(--text-soft);
            font-size: 1.1rem;
        }

        .form-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-family: var(--font-body);
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--text-medium);
            margin-bottom: 0.5rem;
        }

        .form-label i {
            color: var(--rose-accent);
        }

        .form-control {
            width: 100%;
            padding: 1rem 1.25rem;
            font-family: var(--font-body);
            font-size: 0.95rem;
            background: var(--rose-light);
            border: 2px solid var(--border-soft);
            border-radius: var(--radius-md);
            transition: var(--transition);
        }

        .form-control:focus {
            outline: none;
            border-color: var(--rose-accent);
            background: var(--white);
            box-shadow: 0 0 0 4px rgba(236, 72, 153, 0.1);
        }

        .form-control::placeholder {
            color: var(--text-muted);
        }

        .form-check {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .form-check-input {
            width: 20px;
            height: 20px;
            border: 2px solid var(--border-soft);
            border-radius: 6px;
        }

        .form-check-input:checked {
            background: var(--gradient-elegant);
            border-color: var(--rose-accent);
        }

        .form-check-label {
            font-size: 0.9rem;
            color: var(--text-medium);
        }

        .btn-login {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 1rem 2rem;
            font-family: var(--font-body);
            font-size: 0.95rem;
            font-weight: 500;
            letter-spacing: 0.02em;
            border-radius: var(--radius-full);
            border: none;
            cursor: pointer;
            transition: var(--transition);
            background: var(--gradient-elegant);
            color: var(--white);
            box-shadow: var(--shadow-medium);
            width: 100%;
        }

        .btn-login:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(236, 72, 153, 0.25);
            color: var(--white);
        }

        .alert-elegant {
            padding: 1rem 1.5rem;
            border-radius: var(--radius-md);
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
            background: rgba(244, 114, 182, 0.1);
            border: 1px solid rgba(244, 114, 182, 0.3);
            color: var(--rose-deep);
        }

        .login-footer {
            text-align: center;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--border-soft);
        }

        .login-footer small {
            font-family: var(--font-elegant);
            font-style: italic;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .login-footer strong {
            color: var(--rose-accent);
        }

        .text-danger {
            color: var(--rose-deep) !important;
            font-size: 0.8rem;
            margin-top: 0.25rem;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="login-header">
            <div class="login-icon">
                <i class="bi bi-book-half"></i>
            </div>
            <h2>Bibliothèque</h2>
            <p>Administration</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert-elegant">
                <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
            </div>
        }

        <form method="post">
            <div class="mb-4">
                <label class="form-label">
                    <i class="bi bi-envelope"></i> Email
                </label>
                <input type="email" class="form-control" asp-for="Input.Email" placeholder="admin@bibliotheque.com" required>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label">
                    <i class="bi bi-lock"></i> Mot de passe
                </label>
                <input type="password" class="form-control" asp-for="Input.MotDePasse" placeholder="Votre mot de passe" required>
                <span asp-validation-for="Input.MotDePasse" class="text-danger"></span>
            </div>

            <div class="mb-4 form-check">
                <input type="checkbox" class="form-check-input" asp-for="Input.SeRappeler" id="remember">
                <label class="form-check-label" for="remember">Se souvenir de moi</label>
            </div>

            <button type="submit" class="btn-login">
                <i class="bi bi-box-arrow-in-right"></i> Se connecter
            </button>
        </form>

        <div class="login-footer">
            <small>
                Email: <strong>admin@bibliotheque.com</strong><br>
                Mot de passe: <strong>Admin123!</strong>
            </small>
        </div>
    </div>
</body>
</html>
