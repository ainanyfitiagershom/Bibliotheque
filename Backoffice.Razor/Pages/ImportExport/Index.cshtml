@page
@model Backoffice.Razor.Pages.ImportExport.IndexModel
@{
    ViewData["Title"] = "Import / Export";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="bi bi-arrow-left-right"></i> Import / Export de données</h4>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <!-- Import CSV -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-upload"></i> Import CSV
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-page-handler="Import">
                    <div class="mb-3">
                        <label class="form-label">Type de données</label>
                        <select name="type" class="form-select" required>
                            <option value="livres">Livres</option>
                            <option value="auteurs">Auteurs</option>
                            <option value="categories">Catégories</option>
                            <option value="utilisateurs">Utilisateurs</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Fichier CSV</label>
                        <input type="file" name="file" class="form-control" accept=".csv" required>
                        <small class="text-muted">Format : CSV avec en-têtes (UTF-8)</small>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-upload"></i> Importer
                    </button>
                </form>

                <hr>

                <h6><i class="bi bi-info-circle"></i> Guide d'import</h6>
                <p class="small text-muted mb-2">Téléchargez les fichiers exemples pour voir le format attendu :</p>

                <div class="list-group mb-3">
                    <a href="/samples/exemple_livres.csv" download class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-2">
                        <span><i class="bi bi-book text-primary"></i> Exemple Livres</span>
                        <span class="badge bg-secondary"><i class="bi bi-download"></i> CSV</span>
                    </a>
                    <a href="/samples/exemple_auteurs.csv" download class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-2">
                        <span><i class="bi bi-person text-primary"></i> Exemple Auteurs</span>
                        <span class="badge bg-secondary"><i class="bi bi-download"></i> CSV</span>
                    </a>
                    <a href="/samples/exemple_categories.csv" download class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-2">
                        <span><i class="bi bi-tags text-primary"></i> Exemple Catégories</span>
                        <span class="badge bg-secondary"><i class="bi bi-download"></i> CSV</span>
                    </a>
                    <a href="/samples/exemple_utilisateurs.csv" download class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-2">
                        <span><i class="bi bi-people text-primary"></i> Exemple Utilisateurs</span>
                        <span class="badge bg-secondary"><i class="bi bi-download"></i> CSV</span>
                    </a>
                </div>

                <details class="small">
                    <summary class="text-muted cursor-pointer mb-2">Voir les formats attendus</summary>
                    <h6 class="mt-2">Livres :</h6>
                    <pre class="bg-light p-2 small">ISBN;Titre;Auteur;Annee;Editeur;Stock;Description</pre>
                    <small class="text-muted d-block">Note: L'auteur peut être un ID ou un nom. Si l'auteur n'existe pas, il sera créé automatiquement.</small>
                    <small class="text-warning d-block"><i class="bi bi-exclamation-triangle"></i> Attention: Écrivez le nom de l'auteur exactement comme dans la base de données pour éviter les doublons (ex: "Victor Hugo" et non "hugo victor").</small>

                    <h6>Auteurs :</h6>
                    <pre class="bg-light p-2 small">Nom;Prenom;Nationalite;DateNaissance;DateDeces;Biographie</pre>

                    <h6>Catégories :</h6>
                    <pre class="bg-light p-2 small">Nom;Description;Couleur;Icone</pre>

                    <h6>Utilisateurs :</h6>
                    <pre class="bg-light p-2 small">Nom;Prenom;Email;Telephone;Adresse;DateNaissance;MotDePasse</pre>
                </details>
            </div>
        </div>
    </div>

    <!-- Export -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-success text-white">
                <i class="bi bi-download"></i> Export
            </div>
            <div class="card-body">
                <h5>Export CSV</h5>
                <div class="list-group mb-4">
                    <a href="/ImportExport?handler=ExportCsv&type=livres" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-book"></i> Livres</span>
                        <span class="badge bg-primary">CSV</span>
                    </a>
                    <a href="/ImportExport?handler=ExportCsv&type=auteurs" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-person"></i> Auteurs</span>
                        <span class="badge bg-primary">CSV</span>
                    </a>
                    <a href="/ImportExport?handler=ExportCsv&type=categories" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-tags"></i> Catégories</span>
                        <span class="badge bg-primary">CSV</span>
                    </a>
                    <a href="/ImportExport?handler=ExportCsv&type=utilisateurs" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-people"></i> Utilisateurs</span>
                        <span class="badge bg-primary">CSV</span>
                    </a>
                    <a href="/ImportExport?handler=ExportCsv&type=emprunts" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-journal"></i> Emprunts</span>
                        <span class="badge bg-primary">CSV</span>
                    </a>
                </div>

                <h5>Export PDF</h5>
                <div class="list-group">
                    <a href="/ImportExport?handler=ExportPdf&type=livres" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-book"></i> Catalogue des livres</span>
                        <span class="badge bg-danger">PDF</span>
                    </a>
                    <a href="/ImportExport?handler=ExportPdf&type=emprunts" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-journal"></i> Rapport des emprunts</span>
                        <span class="badge bg-danger">PDF</span>
                    </a>
                    <a href="/ImportExport?handler=ExportPdf&type=statistiques" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-bar-chart"></i> Rapport statistiques</span>
                        <span class="badge bg-danger">PDF</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
