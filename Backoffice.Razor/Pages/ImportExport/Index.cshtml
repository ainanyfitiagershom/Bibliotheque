@page
@model Backoffice.Razor.Pages.ImportExport.IndexModel
@{
    ViewData["Title"] = "Import / Export";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="bi bi-arrow-left-right"></i> Import / Export de données</h4>
</div>

<div class="row">
    <!-- Import CSV -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-upload"></i> Import CSV
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-page-handler="Import">
                    <div class="mb-3">
                        <label class="form-label">Type de données</label>
                        <select name="type" class="form-select" required>
                            <option value="livres">Livres</option>
                            <option value="auteurs">Auteurs</option>
                            <option value="categories">Catégories</option>
                            <option value="utilisateurs">Utilisateurs</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Fichier CSV</label>
                        <input type="file" name="file" class="form-control" accept=".csv" required>
                        <small class="text-muted">Format : CSV avec en-têtes (UTF-8)</small>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-upload"></i> Importer
                    </button>
                </form>

                <hr>

                <h6>Format attendu pour les livres :</h6>
                <pre class="bg-light p-2 small">ISBN;Titre;IdAuteur;Annee;Editeur;Stock;Description</pre>

                <h6>Format attendu pour les auteurs :</h6>
                <pre class="bg-light p-2 small">Nom;Prenom;Nationalite;DateNaissance</pre>

                <h6>Format attendu pour les catégories :</h6>
                <pre class="bg-light p-2 small">Nom;Description;Couleur</pre>

                <h6>Format attendu pour les utilisateurs :</h6>
                <pre class="bg-light p-2 small">Nom;Prenom;Email;Telephone</pre>
            </div>
        </div>
    </div>

    <!-- Export -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-success text-white">
                <i class="bi bi-download"></i> Export
            </div>
            <div class="card-body">
                <h5>Export CSV</h5>
                <div class="list-group mb-4">
                    <a href="/ImportExport?handler=ExportCsv&type=livres" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-book"></i> Livres</span>
                        <span class="badge bg-primary">CSV</span>
                    </a>
                    <a href="/ImportExport?handler=ExportCsv&type=auteurs" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-person"></i> Auteurs</span>
                        <span class="badge bg-primary">CSV</span>
                    </a>
                    <a href="/ImportExport?handler=ExportCsv&type=categories" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-tags"></i> Catégories</span>
                        <span class="badge bg-primary">CSV</span>
                    </a>
                    <a href="/ImportExport?handler=ExportCsv&type=utilisateurs" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-people"></i> Utilisateurs</span>
                        <span class="badge bg-primary">CSV</span>
                    </a>
                    <a href="/ImportExport?handler=ExportCsv&type=emprunts" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-journal"></i> Emprunts</span>
                        <span class="badge bg-primary">CSV</span>
                    </a>
                </div>

                <h5>Export PDF</h5>
                <div class="list-group">
                    <a href="/ImportExport?handler=ExportPdf&type=livres" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-book"></i> Catalogue des livres</span>
                        <span class="badge bg-danger">PDF</span>
                    </a>
                    <a href="/ImportExport?handler=ExportPdf&type=emprunts" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-journal"></i> Rapport des emprunts</span>
                        <span class="badge bg-danger">PDF</span>
                    </a>
                    <a href="/ImportExport?handler=ExportPdf&type=statistiques" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-bar-chart"></i> Rapport statistiques</span>
                        <span class="badge bg-danger">PDF</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Historique des imports -->
<div class="card">
    <div class="card-header">
        <i class="bi bi-clock-history"></i> Historique récent des imports
    </div>
    <div class="card-body">
        @if (Model.ImportHistory.Any())
        {
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Fichier</th>
                            <th>Résultat</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var import in Model.ImportHistory)
                        {
                            <tr>
                                <td>@import.Date.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@import.Type</td>
                                <td>@import.Filename</td>
                                <td>
                                    @if (import.Success)
                                    {
                                        <span class="badge bg-success">@import.Count importé(s)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Erreur</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted mb-0">Aucun import récent.</p>
        }
    </div>
</div>
