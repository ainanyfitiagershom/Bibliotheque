@page
@model Backoffice.Razor.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Gestion des catégories";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="bi bi-tags"></i> Gestion des catégories</h4>
    <a href="/Categories/Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Nouvelle catégorie
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            @foreach (var categorie in Model.Categories)
            {
                <div class="col-md-4 col-lg-3 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge me-2" style="background-color: @categorie.Couleur; width: 20px; height: 20px;">&nbsp;</span>
                                <h6 class="mb-0">@categorie.Nom</h6>
                            </div>
                            @if (!string.IsNullOrEmpty(categorie.Description))
                            {
                                <p class="small text-muted mb-2">@(categorie.Description.Length > 80 ? categorie.Description.Substring(0, 80) + "..." : categorie.Description)</p>
                            }
                            <span class="badge bg-secondary">@categorie.NombreLivres livre(s)</span>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group btn-group-sm w-100">
                                <a href="/Categories/Edit/@categorie.IdCategorie" class="btn btn-outline-primary" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="/Categories/Details/@categorie.IdCategorie" class="btn btn-outline-info" title="Détails">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/Categories/Delete/@categorie.IdCategorie" class="btn btn-outline-danger" title="Supprimer">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Categories.Any())
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i> Aucune catégorie trouvée.
                <a href="/Categories/Create">Créer une catégorie</a>
            </div>
        }
    </div>
</div>
