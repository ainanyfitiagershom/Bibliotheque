@page "{id:int}"
@model Backoffice.Razor.Pages.Utilisateurs.BlockModel
@{
    ViewData["Title"] = "Bloquer l'utilisateur";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <i class="bi bi-lock"></i> Bloquer l'utilisateur
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <span class="text-white fw-bold" style="font-size: 2rem;">@Model.Utilisateur?.Nom[0]@Model.Utilisateur?.Prenom[0]</span>
                    </div>
                    <h5>@Model.Utilisateur?.Nom @Model.Utilisateur?.Prenom</h5>
                    <p class="text-muted">@Model.Utilisateur?.Email</p>
                </div>

                @if (Model.EmpruntsEnCours > 0)
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        Cet utilisateur a <strong>@Model.EmpruntsEnCours emprunt(s) en cours</strong>.
                        Le blocage n'affectera pas ces emprunts mais l'empêchera d'en effectuer de nouveaux.
                    </div>
                }

                <p class="text-center">
                    Êtes-vous sûr de vouloir bloquer cet utilisateur ?<br>
                    <small class="text-muted">L'utilisateur ne pourra plus emprunter ni réserver de livres.</small>
                </p>

                <form method="post" class="d-flex gap-2 justify-content-center">
                    <input type="hidden" name="id" value="@Model.Utilisateur?.IdUtilisateur" />
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-lock"></i> Confirmer le blocage
                    </button>
                    <a href="/Utilisateurs/Details/@Model.Utilisateur?.IdUtilisateur" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg"></i> Annuler
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
