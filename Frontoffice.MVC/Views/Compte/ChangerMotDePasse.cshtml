@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Changer le mot de passe";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-key"></i> Changer le mot de passe
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="AncienMotDePasse" class="form-label">Mot de passe actuel</label>
                            <input asp-for="AncienMotDePasse" class="form-control" required>
                            <span asp-validation-for="AncienMotDePasse" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NouveauMotDePasse" class="form-label">Nouveau mot de passe</label>
                            <input asp-for="NouveauMotDePasse" class="form-control" required>
                            <span asp-validation-for="NouveauMotDePasse" class="text-danger"></span>
                            <small class="text-muted">Minimum 6 caract√®res</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmerMotDePasse" class="form-label">Confirmer le nouveau mot de passe</label>
                            <input asp-for="ConfirmerMotDePasse" class="form-control" required>
                            <span asp-validation-for="ConfirmerMotDePasse" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Changer le mot de passe
                            </button>
                            <a asp-action="Profil" class="btn btn-outline-secondary">Annuler</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
