@model LoginViewModel
@{
    ViewData["Title"] = "Connexion";
}

<div class="auth-page-elegant">
    <div class="container">
        <div class="auth-container-elegant">
            <!-- Illustration / Decoration -->
            <div class="auth-decoration-elegant">
                <div class="auth-decoration-content">
                    <div class="auth-icon-large">
                        <i class="bi bi-book-half"></i>
                    </div>
                    <h2>Bienvenue sur Bibliotheca</h2>
                    <p>Connectez-vous pour acceder a votre espace personnel et decouvrir notre collection de livres.</p>
                    <div class="auth-features">
                        <div class="auth-feature">
                            <i class="bi bi-heart"></i>
                            <span>Vos livres favoris</span>
                        </div>
                        <div class="auth-feature">
                            <i class="bi bi-clock-history"></i>
                            <span>Historique d'emprunts</span>
                        </div>
                        <div class="auth-feature">
                            <i class="bi bi-bell"></i>
                            <span>Notifications personnalisees</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Formulaire -->
            <div class="auth-form-elegant">
                <div class="auth-form-header">
                    <div class="auth-avatar">
                        <i class="bi bi-person-heart"></i>
                    </div>
                    <h1>Connexion</h1>
                    <p>Ravi de vous revoir !</p>
                </div>

                <form method="post" class="auth-form-content">
                    <div asp-validation-summary="ModelOnly" class="alert-elegant alert-error-elegant mb-4"></div>

                    <div class="form-group-elegant">
                        <label asp-for="Email" class="form-label-elegant">
                            <i class="bi bi-envelope-heart"></i> Adresse email
                        </label>
                        <div class="input-elegant-wrapper">
                            <input asp-for="Email" class="input-elegant" placeholder="votre@email.com" autofocus>
                        </div>
                        <span asp-validation-for="Email" class="validation-error-elegant"></span>
                    </div>

                    <div class="form-group-elegant">
                        <label asp-for="Password" class="form-label-elegant">
                            <i class="bi bi-lock-fill"></i> Mot de passe
                        </label>
                        <div class="input-elegant-wrapper">
                            <input asp-for="Password" class="input-elegant" placeholder="Votre mot de passe">
                        </div>
                        <span asp-validation-for="Password" class="validation-error-elegant"></span>
                    </div>

                    <div class="form-options-elegant">
                        <label class="checkbox-elegant">
                            <input asp-for="RememberMe" type="checkbox">
                            <span class="checkmark-elegant"></span>
                            <span class="checkbox-label">Se souvenir de moi</span>
                        </label>
                    </div>

                    <button type="submit" class="btn-elegant btn-primary-elegant btn-full">
                        <i class="bi bi-box-arrow-in-right"></i> Se connecter
                    </button>
                </form>

                <div class="auth-divider">
                    <span>ou</span>
                </div>

                <div class="auth-footer-elegant">
                    <p>Pas encore de compte ?</p>
                    <a asp-action="Register" class="btn-elegant btn-secondary-elegant btn-full">
                        <i class="bi bi-person-plus"></i> Creer un compte
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

