<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bibliotheca</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Montserrat:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/site.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navigation Elegant -->
    <nav class="navbar-elegant">
        <div class="container">
            <div class="d-flex align-items-center justify-content-between py-2">
                <a class="navbar-brand-elegant" href="/">
                    <i class="bi bi-book-half"></i>
                    <span>Bibliotheca</span>
                </a>

                <div class="nav-links-elegant d-none d-lg-flex">
                    <a href="/" class="nav-link-elegant">Accueil</a>
                    <a href="/Livres" class="nav-link-elegant">Catalogue</a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a href="/Emprunts" class="nav-link-elegant">Mes emprunts</a>
                    }
                    <a href="/Aide" class="nav-link-elegant">Aide</a>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <form action="/Livres" method="get" class="d-none d-md-block">
                        <div class="search-wrapper-elegant">
                            <i class="bi bi-search"></i>
                            <input type="search" name="search" class="search-input-elegant" placeholder="Rechercher un livre...">
                        </div>
                    </form>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <span class="welcome-text-elegant d-none d-lg-inline">
                            <i class="bi bi-heart-fill"></i> Bienvenue, <strong>@User.Identity.Name</strong>
                        </span>
                        <div class="dropdown">
                            <a href="#" class="user-avatar-elegant dropdown-toggle" data-bs-toggle="dropdown">
                                <span>@User.Identity.Name?.Substring(0, 1).ToUpper()</span>
                            </a>
                            <ul class="dropdown-menu-elegant dropdown-menu dropdown-menu-end">
                                <li class="dropdown-header-elegant">
                                    <small>Connectee en tant que</small>
                                    <div class="fw-medium">@User.Identity.Name</div>
                                </li>
                                <li><a class="dropdown-item-elegant" href="/Compte"><i class="bi bi-house-heart"></i>Mon espace</a></li>
                                <li><a class="dropdown-item-elegant" href="/Emprunts"><i class="bi bi-book"></i>Mes emprunts</a></li>
                                <li><a class="dropdown-item-elegant" href="/Reservations"><i class="bi bi-bookmark-heart"></i>Réservations</a></li>
                                <li><a class="dropdown-item-elegant" href="/Compte/Notifications"><i class="bi bi-bell"></i>Notifications</a></li>
                                <li class="dropdown-divider-elegant"></li>
                                <li><a class="dropdown-item-elegant" href="/Compte/Profil"><i class="bi bi-gear"></i>Paramètres</a></li>
                                <li>
                                    <form asp-controller="Compte" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item-elegant text-danger">
                                            <i class="bi bi-box-arrow-right"></i>Déconnexion
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a href="/Compte/Login" class="btn-elegant btn-secondary-elegant">Connexion</a>
                        <a href="/Compte/Register" class="btn-elegant btn-primary-elegant d-none d-md-inline-flex">S'inscrire</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="container mt-4">
            <div class="alert-elegant alert-success-elegant">
                <i class="bi bi-check-circle-fill"></i>
                <span>@TempData["Success"]</span>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="container mt-4">
            <div class="alert-elegant alert-error-elegant">
                <i class="bi bi-exclamation-circle-fill"></i>
                <span>@TempData["Error"]</span>
            </div>
        </div>
    }

    <main>
        @RenderBody()
    </main>

    <!-- Footer Elegant -->
    <footer class="footer-elegant">
        <div class="container">
            <div class="footer-content-elegant">
                <div class="footer-brand-elegant">
                    <h4>
                        <i class="bi bi-book-half"></i>
                        Bibliotheca
                    </h4>
                    <p>Votre bibliothèque numérique élégante. Découvrez, empruntez et laissez-vous transporter par des milliers d'histoires.</p>
                    <div class="social-links-elegant">
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-pinterest"></i></a>
                        <a href="#"><i class="bi bi-twitter-x"></i></a>
                    </div>
                </div>
                <div class="footer-links-elegant">
                    <h5>Explorer</h5>
                    <ul>
                        <li><a href="/Livres">Catalogue</a></li>
                        <li><a href="/Livres?tri=recent">Nouveautés</a></li>
                        <li><a href="/Livres?tri=populaire">Populaires</a></li>
                    </ul>
                </div>
                <div class="footer-links-elegant">
                    <h5>Compte</h5>
                    <ul>
                        <li><a href="/Compte/Login">Connexion</a></li>
                        <li><a href="/Compte/Register">Inscription</a></li>
                        <li><a href="/Emprunts">Mes emprunts</a></li>
                    </ul>
                </div>
                <div class="footer-links-elegant">
                    <h5>Aide</h5>
                    <ul>
                        <li><a href="/Aide">Guide d'utilisation</a></li>
                        <li><a href="mailto:contact@bibliotheca.fr">Contact</a></li>
                        <li><a href="tel:+33123456789">+33 1 23 45 67 89</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom-elegant">
                <span>&copy; @DateTime.Now.Year Bibliotheca</span>
                <span class="footer-separator">✦</span>
                <span>Fait avec <i class="bi bi-heart-fill text-danger"></i> pour les amoureux des livres</span>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
