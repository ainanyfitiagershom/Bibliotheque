@model LivreDTO

<a href="/Livres/Details/@Model.IdLivre" class="book-card-elegant">
    <div class="book-cover-elegant">
        @if (!string.IsNullOrEmpty(Model.ImageCouverture))
        {
            <img src="@Model.ImageCouverture" alt="@Model.Titre">
        }
        else
        {
            <div class="book-cover-placeholder-elegant">
                <i class="bi bi-book"></i>
            </div>
        }
        <div class="book-overlay-elegant">
            <span class="view-details-elegant">
                <i class="bi bi-eye"></i> Voir d√©tails
            </span>
        </div>
        @if (Model.StockDisponible > 0)
        {
            <span class="book-badge-elegant available">Disponible</span>
        }
        else
        {
            <span class="book-badge-elegant unavailable">Indisponible</span>
        }
    </div>
    <div class="book-info-elegant">
        <h3 class="book-title-elegant">@Model.Titre</h3>
        <p class="book-author-elegant">@Model.NomAuteur</p>
        @if (Model.NoteMoyenne > 0)
        {
            <div class="book-rating-elegant">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= Model.NoteMoyenne)
                    {
                        <i class="bi bi-star-fill"></i>
                    }
                    else if (i - 0.5m <= Model.NoteMoyenne)
                    {
                        <i class="bi bi-star-half"></i>
                    }
                    else
                    {
                        <i class="bi bi-star"></i>
                    }
                }
                <span>@Model.NoteMoyenne.ToString("0.0")</span>
            </div>
        }
    </div>
</a>
